Q30 //Write a program to print reverse of a given number
#include <stdio.h>
int main()
{
    int num,rev=0,rem=0;
    printf("Enter the number=");
    scanf("%d",&num);
    while(num!=0)
    {
    rem=num%10;
    rev=rev*10+rem;
    num=num/10;
    }
    printf("Reversed number=%d",rev);
    return 0;
}
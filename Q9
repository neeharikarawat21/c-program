//Program to calculate simple interest and compound interest
#include <stdio.h>
#include <maths.h>
int main()
{
    float principal,rate,time,si=0,ci=0,amt;
    int i;
    printf("Enter the princiapl amount=");
    scanf("%f",&principal);
    printf("Enter the rate=");
    scanf("%f",&rate);
    printf("Enter the time=");
    scanf("%f",&time);
    si=(principal*rate*time)/100;
    amt=principal*pow((1+rate/100),time);
    ci=amt-principal;
    printf("Simple Interest= %f \n",si);
    printf("Compound Interest= %f \n",ci);
    
    return 0;
}
#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[200];
    char longest[50] = "";
    char word[50];
    int i = 0, j = 0;

    printf("Enter a sentence: ");
    fgets(str, sizeof(str), stdin);

    while (1) {
        if (str[i] != ' ' && str[i] != '\0' && str[i] != '\n') {
            word[j++] = str[i];
        } else {
            word[j] = '\0'; // end of a word

            if (strlen(word) > strlen(longest)) {
                strcpy(longest, word);
            }

            j = 0;  // reset word

            if (str[i] == '\0')
                break;
        }
        i++;
    }

    printf("Longest word: %s\n", longest);
    return 0;
}
Q14 // Program to check vowel or consonent
#include <stdio.h>

int main()
{
    char ch;
    printf("Enter the character: ");
    scanf(" %c", &ch);

    if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||
        ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U') {
        printf("The given character is a vowel");
    } 
else
{
        printf("The given character is a consonant");
    }

    return 0;
}
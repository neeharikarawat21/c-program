#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char name[200];
    char words[20][50];
    int count = 0;

    printf("Enter full name: ");
    fgets(name, sizeof(name), stdin);

    // Split the name into words
    char *token = strtok(name, " \n");
    while (token != NULL) {
        strcpy(words[count++], token);
        token = strtok(NULL, " \n");
    }

    // Print initials of all except the last word (surname)
    for (int i = 0; i < count - 1; i++) {
        printf("%c ", toupper(words[i][0]));
    }

    // Print surname in FULL
    printf("%s\n", words[count - 1]);

    return 0;
}
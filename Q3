//Write a program to calculate length and breadth
#include <stdio.h>

int main()
{
    int l,b,area=0,perimeter=0;
    printf("Enter the length=");
    scanf("%d",&l);
    printf("Enter the breadth=");
    scanf("%d",&b);
    area=l*b;
    perimeter=2*(l+b);
    printf("Area=%d\n",area);
    printf("Perimeter=%d\n",perimeter);
    return 0;

}
